;***********************************************
;INITIALIZE PIC16F883 AND SETUP
;***********************************************

SETUP_CODE CODE	    ;START OF THE FILE
    
INITIALIZE:

;----------PORTA CONFIGURATION----------
    BANKSEL ANSEL
    MOVLW B'00000001'	;CONFIGURE PORTA ANALOG INPUTS
    MOVWF ANSEL
    
    BANKSEL TRISA
    MOVLW B'00000001'	;CONFIGURE PORTA TRISTATE BUFFER
    MOVWF TRISA
    
    BANKSEL PORTA
    CLRF PORTA		;CLEAR PORTA TO A KNOWN STATE
    
;----------PORTB CONFIGURATION----------
    BANKSEL ANSELH
    MOVLW B'00000000'	;CONFIGURE PORTB ANALOG INPUTS
    MOVWF ANSELH
    
    BANKSEL IOCB
    MOVLW B'00000000'	;CONFIGURE PORTB INTERRUPT ON CHANGE FOR EACH PIN
    MOVWF IOCB
    
    BANKSEL TRISB
    MOVLW B'00000000'	;CONFIGURE PORTB TRISTATE BUFFER
    MOVWF TRISB
    
    BANKSEL WPUB
    MOVLW B'00000000'	;CONFIGURE PORTB WEAK PULL UPS
    MOVWF WPUB
    
    BANKSEL PORTB
    CLRF PORTB		;CLEAR PORTB TO A KNOWN STATE

;----------PORTC CONFIGURATION----------
    BANKSEL TRISC
    MOVLW B'10000000'	;CONFIGURE PORTC TRISTATE BUFFER
    MOVWF TRISC
    
    BANKSEL PORTC
    CLRF PORTC		;CLEAR PORTC TO A KNOWN STATE
    
;----------UART CONFIGURATION----------
    BANKSEL BAUDCTL
    CLRF BAUDCTL
    
    BANKSEL SPBRG
    MOVLW H'81'
    MOVWF SPBRG
    CLRF SPBRGH
    
    MOVLW H'24'
    MOVWF TXSTA
    BANKSEL RCSTA
    MOVLW H'90'
    MOVWF RCSTA
    
;----------ADCON CONFIGURATION----------
    BANKSEL ADCON0
    MOVLW B'10000001'	;CONFIGURE ANALOG TO USE AN0 WITH FOSC/32
    MOVWF ADCON0
    
    BANKSEL ADCON1	;RIGHT JUSTIFY THE RESULT DATA
    MOVLW B'10000000'
    MOVWF ADCON1
    
;----------TIMER2 CONFIGURATION----------
    BANKSEL PR2
    MOVLW H'14'
    MOVWF PR2		;SET TIMER2 TO ROLLOVER AT 20
    
    BANKSEL T2CON
    CLRF T2CON		;CONFIGURE TIMER 2, 1:1 PRE AND POST, TIMER DISABLED

;----------INTERRUPTS CONFIGURATION----------
    MOVLW B'01000000'	    ;ENABLE PERIPHERAL INTERRUPTS
    MOVWF INTCON
    
    BANKSEL PIE1    ;ENABLE UART RECEIVE, TIMER2 INTERRUPT, ADC INTERRUPT
    MOVLW B'01100010'
    MOVWF PIE1
    
    CLRF PIE2	    ;DISABLE ALL OTHER PERIPHERAL INTERRUPTS
    
    BANKSEL PIR1    ;CLEAR ANY EXISTING PERIPHERAL FLAGS
    CLRF PIR1
    CLRF PIR2
    
    ;----------LAST STEP ENABLES----------
    BANKSEL T2CON
    BSF T2CON, TMR2ON	;ENABLE TIMER2
    BSF INTCON, GIE	;ENABLE GLOBAL INTERRUPTS
    
    
    RETURN